{{template "base" .}}

{{define "content"}}
    <div id="main-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">

        <ol class="carousel-indicators">
            <li data-bs-target="#main-carousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#main-carousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#main-carousel" data-bs-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/static/images/laptop-woman.png" class="d-block w-100" alt="Woman and laptop">
                <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 0, 0, 0.5); border-radius: 10px;">
                    <p class="text-white p-2">Relax and unwind at our charming retreat in Brașov.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/static/images/tray.png" class="d-block w-100" alt="Tray with coffee">
                <div class="carousel-caption d-none d-md-block" style="background-color: rgba(255, 255, 255, 0.7); border-radius: 10px;">
                    <h5 class="text-dark p-2">Cozy Mornings</h5>
                    <p class="text-dark p-2">Enjoy breakfast in bed with our exquisite room service.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/static/images/rustic_house.png" class="d-block w-100" alt="Outside">
                <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 0, 0, 0.5); border-radius: 10px;">
                    <h5 class="text-white p-2">Rustic Charm</h5>
                    <p class="text-white p-2">Explore the picturesque beauty of the Romanian countryside.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center mt-4">Welcome to Transylvanian Retreat</h1>
                <p class="text-justify mt-3" style="font-size: 1.1em; line-height: 1.6;">
                    Nestled in the heart of the Carpathian Mountains, <strong>Transylvanian Retreat</strong> offers a unique blend of rustic charm and modern comfort. Our boutique hotel is the perfect getaway for those seeking tranquility and adventure in the picturesque city of Brașov.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col text-center">
                <a href="/search-availability" class="btn btn-success">Make Reservation Now</a>
            </div>
        </div>
    </div>
{{end}}