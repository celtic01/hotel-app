{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>About Page</h1>
            <p>This is the About page</p>
            <p> This came from the template {{index .StringMap "test"}}</p>
            <p>
                {{if ne (index .StringMap "remote_ip") ""}}
                    Your remote IP address is {{index .StringMap "remote_ip"}}
                {{else}}
                    I can't find your remote IP address
                {{end}}
            </p>
        </div>
    </div>
</div>
{{end}}